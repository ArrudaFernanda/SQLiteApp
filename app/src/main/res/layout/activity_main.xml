<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="Name"
            android:layout_width="100dp"
            android:layout_height="40dp" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/editText_name"
            android:layout_marginEnd="31dp" android:layout_marginRight="31dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="44dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_name"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="36dp" android:layout_marginEnd="56dp" android:layout_marginRight="56dp"
            app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView
            android:text="Surname"
            android:layout_width="100dp"
            android:layout_height="40dp" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toStartOf="@+id/editText_name"
            android:layout_marginEnd="31dp" android:layout_marginRight="31dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="12dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText_surname"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_marginEnd="51dp" android:layout_marginRight="51dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="17dp"
            app:layout_constraintBottom_toTopOf="@+id/editText_Marks"/>

    <TextView
            android:text="Marks"
            android:layout_width="100dp"
            android:layout_height="40dp" android:id="@+id/textView3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintEnd_toStartOf="@+id/editText_Marks" android:layout_marginEnd="31dp"
            android:layout_marginRight="31dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="24dp" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_Marks"
            android:layout_marginEnd="51dp" android:layout_marginRight="51dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="531dp"/>
    <Button
            android:text="Add Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_add"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="352dp"/>
    <Button
            android:text="View All"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_viewAll"
            android:layout_marginEnd="207dp" android:layout_marginRight="207dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="352dp"/>
    <Button
            android:text="UPDATE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_update"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="304dp"/>
    <TextView
            android:text="id"
            android:layout_width="100dp"
            android:layout_height="40dp" android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextId"
            android:layout_marginEnd="48dp" android:layout_marginRight="48dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="62dp"
            app:layout_constraintBottom_toTopOf="@+id/button_viewAll"/>
    <Button
            android:text="DELETE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button_delete"
            android:layout_marginEnd="208dp" android:layout_marginRight="208dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="304dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>